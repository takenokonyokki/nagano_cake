<h3 class="m-5">会員情報編集</h3>
<div class="mx-5">
  <%= form_with model:[:public, @customer], url: public_update_customer_path, method: :patch, local:true do |f| %>
    <div class="my-4">
      <span class="mx-5">氏名</span>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="my-4">
      <span class="mx-5">フリガナ</span>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="my-4">
      <span class="mx-5">郵便番号</span>
      <%= f.text_field :postal_code %>
    </div>
    <div class="my-4">
      <span class="mx-5">住所</span>
      <%= f.text_field :address, size:50 %>
    </div>
    <div class="my-4">
      <span class="mx-5">電話番号</span>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="my-4">
      <span class="mx-5">メールアドレス</span>
      <%= f.text_field :email %>
    </div>
    <div class="mx-5">
      <%= f.submit "編集内容を保存", class: 'btn btn-primary' %>
      <%= link_to "退会する", public_unsubscribe_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>