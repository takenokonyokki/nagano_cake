<h3 class="m-5">注文情報確認</h3>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-8 ml-3">
      <table class="table table-bordered m-3">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-4 ml-3 border">
        送料<%= @order.shipping_cost %>円
        商品合計<%= @cart_items.sum(&:subtotal) %>
        請求金額<%= @cart_items.sum(&:subtotal) + @order.shipping_cost %>
      </div>
      <div>
      <%= form_with model:[:public,@order], url: public_orders_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :total_payment, value:@cart_items.sum(&:subtotal) + @order.shipping_cost %>
        <h4>支払方法</h4>
        <%= f.hidden_field :payment_method, value:@order.payment_method %>
        <%= @order.payment_method_i18n %>
        <h4>お届け先</h4>
        <%= f.hidden_field :postal_code, value:@order.postal_code %>
        <%= f.hidden_field :address, value:@order.address %>
        <%= f.hidden_field :name, value:@order.name %>
        <%= @order.postal_code %><%= @order.address %><%= @order.name %>
        <%= f.submit "注文を確定する" %>
      <% end %>
      </div>
    </div>
  </div>
</div>