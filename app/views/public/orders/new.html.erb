<h3 class="m-5">注文情報入力</h3>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model:[:public,@order], url: confirm_public_orders_path, method: :post, local: true do |f| %>
      <h4>支払方法</h4>
        <div class="m-3">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        </div>
        <div class="m-3">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>

      <h4>お届け先</h4>
        <div class="m-3">
          <%= f.radio_button :address_option, 0 %>ご自身の住所
          <%= f.label :address, current_customer.address %>
        </div>
        <div class="m-3">
          <%= f.radio_button :address_option, 1 %>登録済み住所から選択
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
        </div>
        <div class="m-3">
          <%= f.radio_button :address_option, 2 %>新しいお届け先
          <div class="m-3">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code, size:50 %>
          </div>
          <div class="m-3">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, size:70 %>
          </div>
          <div class="m-3">
            <%= f.label :name, "宛名" %>
            <%= f.text_field :name, size:50 %>
          </div>
        </div>
        <div class="m-3">
          <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>