<h3 class="m-5">注文履歴一覧</h3>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
<% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%#= @order_details_amount %></td>
      <!--<td>注文ステータス</td>-->
    </tr>
  </tbody>
<% end %>
</table>