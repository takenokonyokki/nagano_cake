<h3 class="m-5">商品詳細</h3>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="my-4">
        <span class="mx-5">商品名</span>
        <%= @item.name %>
      </div>
      <div class="my-4">
        <span class="mx-5">商品説明</span>
        <%= @item.introduction %>
      </div>
      <div class="my-4">
        <span class="mx-5">ジャンル</span>
        <%= @item.genre.name %>
      </div>
      <div class="my-4">
        <span class="mx-5">税込価格(税抜価格)</span>
        <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円
      </div>
      <div class="my-4">
        <span class="mx-5">販売ステータス</span>
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      <div class="mx-5 my-5">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>